@page "/tenkey"
@inject HttpClient Http

<PageTitle>10KEY</PageTitle>

<h3>テンキー入力サンプル</h3>

<div class="tenkey-container">
    <input type="text" @bind="InputValue" readonly />

    @for (int number = 1; number <= 9; number++)
    {
        <button class="btn btn-primary" @onclick="() => AppendNumber(number)">
            @number.ToString()
        </button>
    }

    <button class="btn btn-secondary" @onclick="Clear">Clear</button>
    <button class="btn btn-primary" @onclick="() => AppendNumber(0)">0</button>
</div>

@code {
    private string InputValue { get; set; } = "";

    private void AppendNumber(int number)
    {
        InputValue += number.ToString();
    }

    private void Clear()
    {
        InputValue = "";
    }
}